// CLASE
public  class Cancion {

    // Atributos privados (Encapsulamiento)
    private String titulo;
    private String artista;
    private int duracionSegundos;

    public String getTitulo() {
        return titulo;
    }

    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }

    public String getArtista() {
        return artista;
    }

    public void setArtista(String artista) {
        this.artista = artista;
    }

    public int getDuracionSegundos() {
        return duracionSegundos;
    }

    public void setDuracionSegundos(int duracionSegundos) {
        this.duracionSegundos = duracionSegundos;
    }
}

// MAIN CON DOS OBJETOS
class Main {
    public static void main(String[]args ) {
        //Crear objeto
        Cancion Cancion1 = new Cancion();
        //Asignar atributos
        Cancion1.setTitulo("Odisea");
        Cancion1.setArtista ("Melendi");
        Cancion1.setDuracionSegundos (206);

        Cancion Cancion2 = new Cancion();
        Cancion2.setTitulo("Famous");
        Cancion2.setArtista("Kanye West");
        Cancion2.setDuracionSegundos (198);

        //MOSTRAR DATOS EN PANTALLA
        System.out.println("Canción 1: " + Cancion1.getTitulo() + " - " + Cancion1.getArtista() + " (" + Cancion1.getDuracionSegundos() + "s)");
        System.out.println("Canción 2: " + Cancion2.getTitulo() + " - " + Cancion2.getArtista() + " (" + Cancion2.getDuracionSegundos() + "s)");

        //Establecer nueva duracion
        System.out.println("----------------------------------");
        System.out.println("Cambio en la duración de una de las canciones");
        Cancion2.setDuracionSegundos(200);

        //MOSTRAR CANCIÓN MÁS LARGA
        if (Cancion1.getDuracionSegundos() > Cancion2.getDuracionSegundos()) {
            System.out.println("La canción de más duración es: " + Cancion1.getTitulo());
        } else {
            System.out.println("La canción de más duración es: " + Cancion2.getTitulo());
        }
    }
}
