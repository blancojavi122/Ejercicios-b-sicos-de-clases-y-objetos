public class Pelicula {
     //ATRIBUTOS
    private String titulo;
    private String director;
    private int anhoDeEstreno;
    private int duracionEnMinutos;

    //GETTERS Y SETTERS
    public String getTitulo() {
        return titulo;
    }
    public void settitulo(String titulo) {
        this.titulo = titulo;
    }

    public int getDuracionEnMinutos() {
        return duracionEnMinutos;
    }

    public void setDuracionEnMinutos(int duracionEnMinutos) {
        this.duracionEnMinutos = duracionEnMinutos;
    }

    public int getAnhoDeEstreno() {
        return anhoDeEstreno;
    }

    public void setAnhoDeEstreno(int anhoDeEstreno) {
        this.anhoDeEstreno = anhoDeEstreno;
    }

    public String getDirector() {
        return director;
    }

    public void setDirector(String director) {
        this.director = director;
    }
}
class peli {
    public static void main (String[] args) {
        Pelicula pelicula = new Pelicula();
        pelicula.settitulo("CREED");
        pelicula.setDirector("ryan coogler");
        pelicula.setAnhoDeEstreno(2015);
        pelicula.setDuracionEnMinutos(133);

        System.out.println("Pelicula: " + pelicula.getTitulo() + " - " + pelicula.getDirector() + " - " + pelicula.getAnhoDeEstreno() + " - " + pelicula.getDuracionEnMinutos() + " MINS" );
        System.out.println("-----------------------------------");
        System.out.println("Error al mostrar los datos");
        System.out.println("Error corregido: " + pelicula.getDirector().toUpperCase());

    }
}
